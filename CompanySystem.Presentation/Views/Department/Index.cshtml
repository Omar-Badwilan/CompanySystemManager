@model IEnumerable<DepartmentDto>
@{
    ViewData["Title"] = "Departments"; 
}

<partial name="NotificationTriggerPartial" />


<h1>Departments</h1>

<br />
<br />

<a asp-controller="Department" asp-action="Create" class="btn btn-primary">Create New Department</a>

<br />
<form asp-action="Index" id="searchForm" method="get" class="mt-5 row justify-content-center align-items-center">

    <div class="row col-12">
        <div class="col-5">
            <label for="searchInp" class="form-label visually-hidden">Search Departments</label>

            <input type="text" name="search" class="form-control search-input" id="searchInp"
                   placeholder="Search By Name"
                   value="@Context.Request.Query["search"]"
                   data-controller="department"
                   data-table-id="departmentTable" />
        </div>
    </div>
</form>
<partial name="Partials/_DepartmentsTablePartial" />

