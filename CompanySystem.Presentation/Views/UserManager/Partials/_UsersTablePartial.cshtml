@using CompanySystem.Presentation.ViewModels.Managers
@model IEnumerable<UserManagerViewModel>

@{
    ViewData["Title"] = "Users";
}



@if (Model.Any())
{
    <table id="usersTable" class="table table-striped table-hover mt-4">
        <thead class="text-center">
            <tr>
                <th>@Html.DisplayNameFor(u => u.First().Id)</th>
                <th>@Html.DisplayNameFor(u => u.First().FirstName)</th>
                <th>@Html.DisplayNameFor(u => u.First().LastName)</th>
                <th>@Html.DisplayNameFor(u => u.First().Email)</th>
                <th>@Html.DisplayNameFor(u => u.First().PhoneNumber)</th>
                <th>@Html.DisplayNameFor(u => u.First().Roles)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody class="text-center">
            @foreach (var user in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(x => user.Id)</td>
                    <td>@Html.DisplayFor(x => user.FirstName)</td>
                    <td>@Html.DisplayFor(x => user.LastName)</td>
                    <td>@Html.DisplayFor(x => user.Email)</td>
                    <td>@Html.DisplayFor(x => user.PhoneNumber)</td>
                    <td>@string.Join(", ", user.Roles)</td>
                    <partial name="_ButtonsPartial" model="@user.Id" />
                </tr>

                <!-- Delete Modal -->
                <div class="modal fade" id="deleteModal-@user.Id" tabindex="-1" aria-labelledby="deleteModalLabel-@user.Id" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h1 class="modal-title fs-5" id="deleteModalLabel-@user.Id">Delete User</h1>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                Are you sure you want to delete the user <strong>@user.FirstName @user.LastName</strong>?
                            </div>
                            <div class="modal-footer">
                                <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info mt-3">
        <h3>There are No Users :(</h3>
    </div>
}
