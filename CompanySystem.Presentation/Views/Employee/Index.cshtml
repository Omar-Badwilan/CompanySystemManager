@model IEnumerable<EmployeeDto>
@{
    ViewData["Title"] = "Employees"; 
}

@* Notification when creation -deletion -updation*@
 <partial name="NotificationTriggerPartial" />


<h1>Employees</h1>

<br />
<br />

<a asp-controller="Employee" asp-action="Create" class="btn btn-primary">Create New Employee</a>

<br />


<form asp-action="Index" method="get" class="mt-5 row justify-content-center align-items-center">
        
    <div class="row col-8">
        <div class="col-8">
            <label for="searchInp" class="form-label visually-hidden">Search Employee</label>
            <input type="text" name="search" class="form-control" id="searchInp" 
            placeholder="Search By Name" 
            value="@Context.Request.Query["search"]"/>
        </div>
        <div class="col-4">
            <input type="submit" value="Search" class="btn btn-success" />
        </div>
    </div>
</form>

<partial name="Partials/_EmployeesTablePartial" />
