@model RolesManagerViewModel

<form asp-action="@ViewBag.Action" class="col-6">
    <div asp-validation-summary="ModelOnly"></div>

    @* Only show ID field when editing existing roles *@
    @if (ViewBag.Action == "Edit" && !string.IsNullOrEmpty(Model.Id))
    {
        <div class="form-group mb-3">
            <label class="form-label" asp-for="Id"></label>
            <input asp-for="Id" class="form-control" readonly />
            <span asp-validation-for="Id" class="text-danger"></span>
        </div>
    }
    else
    {
        @* Hidden field for model binding in case needed *@
        <input asp-for="Id" type="hidden" />
    }
    <div class="form-group mb-3">
        <label class="form-label" asp-for="RoleName"></label>
        <input asp-for="RoleName" class="form-control" />
        <span asp-validation-for="RoleName" class="text-danger"></span>
    </div>


    <div class="mt-4">
        <input type="submit"
               value="@(ViewBag.Action == "Edit" ? "Update" : "Create")"
               class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-light">Back To</a>
    </div>


</form>
